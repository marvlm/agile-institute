
{% extends "base.njk" %}

{% block content %}

<section id="email-us" class="email-us page-top">
    <div class="container wow fadeInUp" data-wow-delay="0.3s">
        <div class="row">
            
            <div class="col-md-6">
            <div class="email-wrapper">
                <h1>{{ title }}</h1>
                <div class="section-snippet hidden-xs">
                    <img src="{{ image }}" width="80%" class="animated fadeInUp delay-1 img-responsive" alt="banner">
                </div>

                <div class="section-snippet hidden-xs">
                    <span class="snippet-heading">Normalmente respondemos</span>
                    <span>en 24 horas</span>  
                </div>
                </div>  
            </div>
            <div class="col-md-6">
                <div class="form-wrapper">
                    <form id="contact-form" name="contact" netlify>
                        <label for="name">Tu nombre:</label>
                        <input type="text" name="name" id="name" placeholder="¿Cómo te llamas?">
                        <label for="email">Tu email:</label>
                        <input type="email" name="email" id="email" placeholder="¿Cuál es tu email?">
                        <label for="message">Mensaje:</label>
                        <textarea name="message" id="message" placeholder="¿En qué te podemos ayudar?"></textarea>
                        <input class="custom-button" type="submit" name="submit" value="Envíanos tu mensaje">
                    </form> 
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock content %}