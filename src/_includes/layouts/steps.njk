{% extends "base.njk" %}

{% block content %}

<link rel="stylesheet" href="/assets/css/timeline.css">

<section id="about-banner" class="about-banner" style="background: linear-gradient(rgba(255,255,255,.8), rgba(255,255,255,.8)), url({{ image }});
  background-color: #fff; background-repeat: no-repeat; background-attachment: fixed; background-position: right 100%; background-size: 50% 60%;">
    <div class="container">
        <div class="about-banner-wrapper full-height">
            <div class="about-heading">                
                <h1 class="wow fadeInUp" data-wow-delay="0.6s">{{id}} - {{ title }}</h1> </br>
                <h3 class="wow fadeInUp" data-wow-delay="0.3s">{{ description }}</h3>
            </div>
        </div>        
    </div>
</section>

<section id="about-us" class="about-us page">
    <div class="container wow fadeInUp" data-wow-delay="0.3s">
        <div class="row">
            <div class="container">
                {{ content | safe }}
            </div>
        </div>
    </div>
</section>

{% endblock content %}