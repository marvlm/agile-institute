<header id="header">

    <!-- TOP NAVIGATION -->
    <nav class="top-navigation-bar navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navigation-bar" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">
                        {{ site.title_a }}{{ site.title_b }}</a>
                        <!-- <img src="/assets/images/logo-navbar.png" alt="logo"> -->
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="top-navigation-bar">
                        {% set navPages = collections.all | eleventyNavigation %}
                        <ul class="nav navbar-nav navbar-right">
                            {%- for entry in navPages %}
                                <li {% if entry.url == page.url %}class="active"{% endif %}>
                                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                                </li>
                            {%- endfor %}
